# Server Configuration
PORT=16127
NODE_ENV=development

# CORRECTED Flux API Endpoints - Changed from .com to .io
FLUX_NETWORK_API=https://api.runonflux.io
FLUX_EXPLORER_API=https://explorer.runonflux.io/api
FLUX_STATS_API=https://stats.runonflux.io/api
FLUX_VIEW_API=https://fluxview.app.runonflux.io

# Additional Flux Network APIs (for future use)
FLUX_HOME_API=https://home.runonflux.io
FLUX_DOCS_API=https://docs.runonflux.io
FLUX_SOURCE_API=https://source.runonflux.io

# Security
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000,http://localhost:16127
API_RATE_LIMIT=100

# Optional: Database (if you want to store data)
# DATABASE_URL=mongodb://localhost:27017/flux-cockpit

# Optional: Authentication (if you want user accounts)
# JWT_SECRET=your-super-secret-jwt-key
# SESSION_SECRET=your-session-secret

# Cache Settings
CACHE_TTL=300000
MAX_CACHE_SIZE=100

# Logging
LOG_LEVEL=info

# Flux Network Configuration
FLUX_API_TIMEOUT=15000
FLUX_CACHE_DURATION=30000

# Development Settings
DEBUG_MODE=true
ENABLE_CORS=true

# API Testing Configuration
# Note: Replace with your actual API key if you have one
# FLUX_API_KEY=your-actual-api-key-here