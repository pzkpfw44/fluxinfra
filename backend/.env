# Server Configuration
PORT=16127
NODE_ENV=development

# API Endpoints
FLUX_NETWORK_API=https://api.runonflux.io
FLUX_EXPLORER_API=https://explorer.runonflux.io/api
FLUX_STATS_API=https://stats.runonflux.io/api

# Security
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000
API_RATE_LIMIT=100

# Optional: Database (if you want to store data)
# DATABASE_URL=mongodb://localhost:27017/flux-cockpit

# Optional: Authentication (if you want user accounts)
# JWT_SECRET=your-super-secret-jwt-key
# SESSION_SECRET=your-session-secret

# Cache Settings
CACHE_TTL=300000
MAX_CACHE_SIZE=100

# Logging
LOG_LEVEL=info